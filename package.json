{
  "name": "react-inp-auditor",
  "version": "1.0.0",
  "description": "React-focused static analyzer for detecting INP (Interaction to Next Paint) performance issues in TypeScript/React code",
  "type": "module",
  "main": "build/server.js",
  "bin": {
    "react-inp-audit": "./build/cli/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json -f -fe .js",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "cli": "node build/cli/index.js",
    "test:cli": "tsx src/cli/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "simple-git": "^3.30.0",
    "tslog": "^4.10.2",
    "typescript": "^5.7.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.16",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "vitest": "^2.1.8"
  }
}
